<a href="/leagues">Leagues Index</a><br><a href="/clubs">Clubs Index</a>

<h1><%= @league.name %></h1>
<br>

<% @clubs.each do |club| %>
  <p>
  Name: <%= club.name %><br>
  Position: <%= club.position %><br>
  City: <%= club.city %><br>
  Previous Winner: <%= club.previous_winner %><br>
  <%= link_to "Edit", "/clubs/#{club.id}/edit" %><br>
  </p>
<% end %>
<%= link_to "Sort Alphabetically", :sort => :name %>
<a href="/leagues/<%= @league.id %>/clubs/new">Create new club</a>
<%= form_with url: "/leagues/#{@league.id}/clubs", method: :get, local: true do |form| %>
  <%= form.label :position, "Current league position greater than" %>
  <%= form.number_field :position, :value => 0 %>
  <%= form.submit "Submit" %>
<% end %>